<div class="page-connexion">
  <div class="page-connexion-left">
    <%= image_tag 'page-connexion/page-mdp-oublie.jpg' %>
  </div>
  <div class="page-connexion-right">
    <div class="page-connexion-right-inscription">
      <p>Nouveau sur Livesson, vous n’avez pas encore de compte ?</p>
      <%= link_to new_user_registration_path do %>
        <button class="btn-rectangle">M'inscrire</button>
      <% end %>
    </div>
    <div class="page-connexion-right-form">
      <h2>Mot de passe oublié</h2>
      <p>Entrez votre adresse e-mail avec laquelle vous avez créé votre compte pour réinitialiser votre mot de passe</p>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      label: "Adresse email",
                      placeholder: "hello@livesson.com",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer", class: "btn-rectangle" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
