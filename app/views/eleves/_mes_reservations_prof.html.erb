<% if @lessons.present? %>
  <div class="container-reservations">


    <button id="buttonToggleUpcomingLessons" class="purple medium d-flex">
      <h5 class="purple">MES COURS À VENIR (<%= @upcoming_lessons.count %>)</h5><span>+</span>
    </button>
    <div id="toggleUpcomingLessons" style="display: none">
      <% if @upcoming_lessons.present? %>
        <div class="cards-reservations-as-prof">
          <div class="row">
            <% @upcoming_lessons.each do |upcoming_lesson| %>
              <div class="col-xs-12 col-lg-12">
                <div class="card-reservation-as-prof d-flex">

                  <div class="card-reservation-prof-left col-xs-12 col-lg-2">
                    <p class="medium"><span><%= I18n.l(upcoming_lesson.lesson_date, format: '%A %d %B %Y', locale: :'fr').capitalize %></span> à <%= upcoming_lesson.start.strftime('%Hh%M') %></p>
                    <p class="purple medium"><%= upcoming_lesson.lesson_name.upcase %></p>
                    <p><%= upcoming_lesson.lesson_level %></p>
                    <p>Cours en <%= upcoming_lesson.lesson_language %></p>
                    <p><%= (upcoming_lesson.duration / 60).round %>min</p>
                    <p class="medium"><span class= "purple"><%= upcoming_lesson.bookings.count %></span> réservation</p>
                  </div>

                  <div class="card-reservation-prof-centre col-xs-12 col-lg-8">
                    <p class='medium mb-0'>Descriptif du cours</p>
                    <p><%= upcoming_lesson.lesson_description %></p>
                    <p class='medium mb-0'>Matériel nécessaire</p>
                    <p><%= upcoming_lesson.lesson_material_needed %></p>
                  </div>

                  <div class="card-reservation-prof-right col-xs-12 col-lg-2 d-flex justify-content-center align-items-center">
                    <div>
                      <%= link_to elefe_path(upcoming_lesson.eleve), class: "btn-rectangle mb-4" do %>
                        <%= image_tag "video-call.svg", class: "video-call-icon" %>
                        <p>Démarrer le cours</p>
                      <% end %>
                      <%= link_to '+ Ajouter à mon calendrier', elefe_path(upcoming_lesson.eleve), class: 'black-link medium' %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <p>Vous n'avez pas de cours à venir.</p>
      <% end %>
    </div>

    <h5 class="purple">MES COURS PASSÉS (<%= @past_lessons.count %>) <button id="buttonTogglePastLessons" class="purple medium">+</button></h5>
    <div id="togglePastLessons" style="display: none">
      <% if @past_lessons.present? %>
        <% @past_lessons.each do |past_lesson| %>
          <div class="row">
            <div class="col-xs-12 col-md-6">
              <div class="card-mes-reservations">
                <div class="card-part-left">
                  <p class="medium"><%= past_lesson.lesson_date.strftime(" %A %d %B %Y") %> à <%= past_lesson.start.strftime('%Hh%M') %></p>
                  <p class="purple medium"><%= past_lesson.lesson_name.upcase %></p>
                  <p><%= past_lesson.lesson_level %></p>
                  <p>Cours en <%= past_lesson.lesson_language %></p>
                  <p class="medium"><span class= "purple"><%= past_lesson.bookings.count %></span> réservation</p>
                </div>
                <div class="card-part-right">
                  <p>Descriptif du cours</p>
                  <p><%= past_lesson.lesson_description %></p>
                  <p>Matériel nécessaire</p>
                  <p><%= past_lesson.lesson_material_needed %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>Vous n'avez pas de cours passés</p>
      <% end %>
    </div>

  </div>
<% else %>
  <p>Vous n'avez pas encore créé de cours.</p>
<% end %>

