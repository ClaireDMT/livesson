<div class="container">
  <%= simple_form_for @lesson do |f| %>
    <%= f.association :template, collection: @templates, label_method: :template_name, value_method: :id %>
    <%= f.input :lesson_date %>
    <%= f.input :start %>
    <%= f.input :end %>
    <%= f.input :lesson_language, collection: Lesson::LANGUES
    <%= f.input :lesson_price %>
    <%= f.input :lesson_discount_price %>
    <%= f.submit 'Enregistrer', class: 'btn-rectangle' %>
  <% end %>
</div>
