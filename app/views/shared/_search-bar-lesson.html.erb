<div class= 'text-center'>
  <%= simple_form_for :query, method: :get, url: lessons_path, html: { class: "search-bar-lesson", id: "form-search" }, defaults: { input_html: { class: 'search-input-index' } } do |f| %>
      <%= f.input :sport_name, label: false, collection: Lesson::SPORTS, selected: @sport, include_blank: "Type d'activitÃ©s", required: false, wrapper_html: { class: "margin-10-0"} %>
      <%= f.input :lesson_language, label: false, collection: Lesson::LANGUES, selected: @langue, include_blank: "Langue", required: false, wrapper_html: { class: "margin-10-0" } %>
      <% lesson_date =  params[:query][:lesson_date] if params[:query].present? %>
      <%= f.input :lesson_date , label: false, input_html: { value: lesson_date }, required: false, placeholder: "Jour", wrapper_html: { class: "margin-10-0" } %>
      <%#= f.input :creneaux, label: false, collection: Lesson::LANGUES, selected: @langue, include_blank: "Langue", required: false, wrapper_html: { class: "margin-10-0" } %>
      <%= f.input :lesson_level, label: false, collection: Lesson::NIVEAUX, selected: @niveaux, include_blank: "Niveau", required: false, wrapper_html: { class: "margin-10-0" } %>
      <button type="submit" id="submit-form"><i class="fas fa-search "></i></button>
  <% end %>
</div>
